html, body
    width: 100%
    height: 100%
    background-color: #f5f5f5
	.playIcon
		.play
			position: fixed
			width: 60px
			bottom: 80px
			height: 60px
			right: 40px
			/*
			background: url('assets/img/play.png') no-repeat
			background-size: 100% 100%
			*/
			z-index: 1000000
		.pause
			position: fixed
			width: 60px
			bottom: 80px
			height: 60px
			right: 40px
			/*
			background: url('assets/img/pause.png') no-repeat
			background-size: 100% 100%
			*/
			z-index: 1000000
	.list-btn
		position: fixed
		bottom: -1px;
		right: 10px;
		z-index: 1000
		.am-btn
			background-color: rgba(0, 0, 0, 0)
			outline: none!important
		.list-btn-icon
			width: 20px
			height: 20px
	.tab-component
		margin: 0!important
		padding: 0!important
		display: flex
		flex-direction: column
		height: 100%
		background-color: rgb(238, 238, 238)
		.tab-wrap
			width: 200px
			height: 40px
			li
				a
					line-height: 40px!important
		.content-wrap
			width: 100%
			flex: 1
			border: none!important
			.am-tab-panel
				width: 100%
				height: 100%
				padding: 0!important
			.swiper-container
				width: 100%
				height: 100%
				margin: 0!important
				.swiper-slide
					width: 100%!important
					height: 100%
					text-align: center
					img
						width: 100%
						height: auto
			.tab-content-item
				height: 100%
	.back
		position: fixed
		bottom: 10px;
		right: 80px;
		width: 20px;
		height: 20px;
		z-index: 1000
	.next
		position: fixed
		bottom: 10px;
		right: 140px;
		width: 20px;
		height: 20px;
		z-index: 1000
	.prev
		position: fixed
		bottom: 10px;
		right: 190px;
		width: 20px;
		height: 20px;
		z-index: 1000